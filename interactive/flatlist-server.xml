<screen scroll="true">
  <box style="padding=10; backgroundColor=#f5f5f5">
    <flatlist 
      data='[
        {"id": "1", "name": "Goku", "image": "https://dragonball-api.com/characters/goku_normal.webp", "ki": "60.000.000", "Affiliation": "Z Fighter"},
        {"id": "2", "name": "Vegeta", "image": "https://dragonball-api.com/characters/vegeta_normal.webp", "ki": "50.000.000", "Affiliation": "Z Fighter"},
        {"id": "3", "name": "Gohan", "image": "https://dragonball-api.com/characters/gohan_normal.webp", "ki": "40.000.000", "Affiliation": "Z Fighter"}
      ]' 
      key="id"
      numColumns="1"
      style="padding=5; backgroundColor=#ffffff; borderWidth=1; borderColor=#dddddd"
    >
      <listitem>
        <box style="padding=10; borderWidth=1; borderColor=#eeeeee; margin=5; borderRadius=5">
          <image uri="{{item.image}}" />
          <text style="fontSize=16; fontWeight=bold; color=#333333">{{item.name}}</text>
          <text style="fontSize=14; color=#777777; marginTop=5">Base KI: {{item.ki}}</text>
          <text style="fontSize=14; color=#777777; marginTop=5">Affiliation: {{item.Affiliation}}</text>
        </box>
      </listitem>
    </flatlist>
  </box>
</screen>