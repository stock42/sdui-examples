<screen scroll="true">
  <body>
    <box style="padding=10; backgroundColor=#f5f5f5">
      <flatlist 
        data='[{"id": "1", "name": "Item 1", "description": "This is item 1"}, {"id": "2", "name": "Item 2", "description": "This is item 2"}, {"id": "3", "name": "Item 3", "description": "This is item 3"}]' 
        key="id"
        numColumns="1"
        style="padding=5; backgroundColor=#ffffff; borderWidth=1; borderColor=#dddddd"
      >
        <listitem>
          <box style="padding=10; borderWidth=1; borderColor=#eeeeee; margin=5; borderRadius=5">
            <text style="fontSize=16; fontWeight=bold; color=#333333">{{item.name}}</text>
            <text style="fontSize=14; color=#777777; marginTop=5">{{item.description}}</text>
          </box>
        </listitem>
      </flatlist>
    </box>
  </body>
</screen>